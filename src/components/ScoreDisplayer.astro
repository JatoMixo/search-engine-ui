---
import "../styles/global.css";

const {
    score
} = Astro.props;

const COLORS = {
    80: {
        "dark": "#003E27",
        "light": "#0FEB3F",
    },
    30: {
        "dark": "#553F06",
        "light": "#FFE817",
    },
    0: {
        "dark": "#310000",
        "light": "#FF0000",
    }
}
---

<div id="outer-circle">
    <div id="inner-circle">
        <p id="score-text">{score}</p>
    </div>
</div>

<style>

    :root {
        --circle-width: 20px;
    }

    #score-text {
        color: var(--title);
        font-size: 40px;
        text-shadow: 0 0 4px var(--title);
    }

    #outer-circle {
        border: var(--circle-width) solid #003E27;
        border-radius: 50%;

        box-shadow: 0 0 15px 0 #003E27, inset 0 0 15px 0 #003E27;

        width: 100px;
        height: 100px;

        padding: 0;
        margin: 0;
    }

    #inner-circle {
        border: var(--circle-width) solid #0FEB3F;
        border-radius: 50%;

        box-shadow: 0 0 15px 0 #0FEB3F, inset 0 0 15px 0 #0FEB3F;

        width: 100px;
        height: 100px;

        margin: 0;
        margin-top: calc(-1 * var(--circle-width));
        margin-left: calc(-1 * var(--circle-width));

        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
