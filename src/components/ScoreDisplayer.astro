---
import "../styles/global.css";

const {
    score
} = Astro.props;

const COLORS = {
    80: {
        "dark": "#003E27",
        "light": "#0FEB3F",
    },
    30: {
        "dark": "#553F06",
        "light": "#FFE817",
    },
    0: {
        "dark": "#310000",
        "light": "#FF0000",
    }
}
---

<div id="outer-circle">
    <div id="inner-circle">
        <p id="score-text">{score}</p>
    </div>
</div>

<style>
    #score-text {
        color: var(--title);
        font-size: 40px;
        text-shadow: 0 0 4px var(--title);
    }

    #outer-circle {
        border: solid 30px #003E27;
        border-radius: 50px;

        width: 100px;
        height: 100px;

        padding: 0;
        border: 0;
        margin: 0;
    }

    #inner-circle {
        border-radius: 50px;

        box-shadow: 0 0 15px 0 #0FEB3F;

        width: 100px;
        height: 100px;

        padding: 0;
        margin: 0;
    }
</style>
